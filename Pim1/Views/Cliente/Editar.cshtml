@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="text-center">


    <h1 class="display-4">Editar Cliente</h1>

</div>

<form>

    <div class="form-group">
        <label for="nomecli">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do Cliente">
    </div>

    <br />

    <div class="form-group">
        <label for="cpf">CPF</label>
        <input type="text" class="form-control" placeholder="Digite o cpf do cliente">
    </div>

    <br />

    <div class="form-group">
        <label for="cnpj">CNPJ</label>
        <input type="text" class="form-control" placeholder="Digite o cnpj do cliente">
    </div>

    <br />

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" class="form-control" placeholder="Digite o email do cliente">
    </div>

    <br />
    <div class="form-group">
        <label for="tipocliente">Tipo de cliente</label>
        <select class="form-control" id="tipocliente">
            <option value="">Selecione o tipo de cliente</option>
            <option value="pf">PF</option>
            <option value="pj">PJ</option>
        </select>
    </div>


    <br />
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="cliente" asp-action="Index" role="button">Voltar</a>
</form>