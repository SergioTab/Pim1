@{
    ViewData["Title"] = "Editar Produto";
}

<div class="text-center">


    <h1 class="display-4">Editar Produto</h1>

</div>

<form>

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do produto/alimento colhido">
    </div>

    <br />

    <div class="form-group">
        <label for="data">Data de entrada</label>
        <input type="text" class="form-control" placeholder="Digite a data de colheita">
    </div>

    <br />

    <div class="form-group">
        <label for="quantidade">Quantidade</label>
        <input type="text" class="form-control" placeholder="Digite a quantidade colhida">
    </div>

    <br />

    <div class="form-group">
        <label for="valor">Valor Unit.</label>
        <input type="text" class="form-control" placeholder="Digite o valor unit&aacute;rio do produto/alimento colhido">
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="produto" asp-action="Index" role="button">Voltar</a>
</form>